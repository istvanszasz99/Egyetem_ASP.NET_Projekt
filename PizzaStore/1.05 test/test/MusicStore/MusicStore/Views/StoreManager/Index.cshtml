@model IEnumerable<MusicStore.Models.Album>

@*自定义验证方法*@
@helper Truncate(string input,int length) 
{
    if (input.Length <= length)
    {
        @input
    }
    else
    {
        @input.Substring(0,length)<text>...</text>
    }
}

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>

<p>
    @Html.ActionLink("Új hozzáadása", "Create")
</p>
<table class="table table-hover">
    <tr class="success">
        <th>
            Megnevezés
        </th>
        <th>
            Leírás
        </th>
        <th>
            Ár
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="warning">
        <td>
            @Truncate(item.Artist.Name,25)
        </td>
        <td>
            @Truncate(item.Title, 25)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Szerkesztés", "Edit", new { id = item.AlbumId }) |
            @Html.ActionLink("Részletek", "Details", new { id = item.AlbumId }) |
            @Html.ActionLink("Törlés", "Delete", new { id = item.AlbumId })
        </td>
    </tr>
}

</table>
